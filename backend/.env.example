# ZenSpa Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=ZenSpa Backend
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=your_random_secret_key_here

# Server
HOST=0.0.0.0
PORT=8000

# CORS
CORS_ORIGINS=http://localhost:3000

# Database (Supabase PostgreSQL)
# Format: postgresql://postgres:your_password@db.your_project_ref.supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your_password@db.your_project_ref.supabase.co:5432/postgres

# Redis (Upstash - REST API)
# UPSTASH_REDIS_REST_URL=https://your-rest-url.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_rest_token

# Logging
LOG_LEVEL=INFO

# Supabase (for JWT authentication)
SUPABASE_URL=https://your_project_ref.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
